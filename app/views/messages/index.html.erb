<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table><!-- newsfeed posts should not be displayed as a table -->
  <thead>
    <tr>
      <th>Title</th>
      <th>From</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.title %></td>
        <td><%= message.creator.username %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Delete', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Posts', posts_url %>
